<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="Branches\Domain\Model\Parents" table="relationship_children">
        <id name="id" type="bigint">
            <generator strategy="IDENTITY" />
        </id>

        <field name="pedigree" type="string" length="7" nullable="false" />

        <field name="created" type="datetimetz" nullable="false" />
        <field name="updated" type="datetimetz" nullable="true" />

        <many-to-one field="relationship" target-entity="Relationship">
            <join-column name="relationship_id" referenced-column-name="id" />
        </many-to-one>

        <many-to-one field="person" target-entity="Person">
            <join-column name="child_id" referenced-column-name="id" />
        </many-to-one>

        <many-to-many field="notes" target-entity="Note">
            <join-table name="relationship_children_notes">
                <join-columns>
                    <join-column name="note_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="parent_id" referenced-column-name="id" unique="true" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many field="sources" target-entity="Source">
            <join-table name="relationship_children_sources">
                <join-columns>
                    <join-column name="source_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="parent_id" referenced-column-name="id" unique="true" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>
