<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="Branches\Domain\Model\Note" table="notes">
        <id name="id" type="bigint">
            <generator strategy="IDENTITY" />
        </id>

        <field name="note" column="note" type="text" nullable="true" />

        <field name="created" type="datetimetz" nullable="false" />
        <field name="updated" type="datetimetz" nullable="true" />

        <many-to-many field="sources" target-entity="Source">
            <join-table name="note_sources">
                <join-columns>
                    <join-column name="source_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="note_id" referenced-column-name="id" unique="true" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>