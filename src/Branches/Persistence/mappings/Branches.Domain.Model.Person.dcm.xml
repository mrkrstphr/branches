<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="Branches\Domain\Model\Person" table="people">
        <id name="id" type="bigint">
            <generator strategy="IDENTITY" />
        </id>

        <field name="refId" column="ref_id" type="string" length="50" nullable="false" unique="true" />
        <field name="gender" type="string" length="1" nullable="false" />
        <field name="created" type="datetime" nullable="false" />
        <field name="updated" type="datetime" nullable="true" />

        <one-to-many field="names" target-entity="Name" mapped-by="person" />

        <many-to-many field="relationships" target-entity="Relationship" inversed-by="parents">
            <join-table name="relationship_people">
                <join-columns>
                    <join-column name="person_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="relationship_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <one-to-many field="parents" target-entity="Parents" mapped-by="person" />

        <many-to-many field="events" target-entity="Event">
            <join-table name="person_events">
                <join-columns>
                    <join-column name="person_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="event_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many field="attributes" target-entity="Attribute">
            <join-table name="person_attributes">
                <join-columns>
                    <join-column name="person_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="attribute_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many field="sources" target-entity="Source">
            <join-table name="person_sources">
                <join-columns>
                    <join-column name="person_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="source_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many field="notes" target-entity="Note">
            <join-table name="person_notes">
                <join-columns>
                    <join-column name="person_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="note_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>