<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="Branches\Domain\Model\Event" table="events">
        <id name="id" type="bigint">
            <generator strategy="IDENTITY" />
        </id>

        <field name="eventType" column="event_type" type="string" length="4" nullable="true" />
        <field name="eventDate" column="event_date" type="string" length="100" nullable="true" />
        <field name="eventStamp" column="event_stamp" type="string" length="8" nullable="true" />
        <field name="confidenceLevel" column="confidence_level" type="integer" nullable="false" />

        <many-to-one field="location" target-entity="Location">
            <join-column name="location_id" on-delete="RESTRICT" on-update="RESTRICT" />
        </many-to-one>
    </entity>
</doctrine-mapping>