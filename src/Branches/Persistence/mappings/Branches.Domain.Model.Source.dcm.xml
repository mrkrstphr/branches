<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="Branches\Domain\Model\Source" table="sources">
        <id name="id" type="bigint">
            <generator strategy="IDENTITY" />
        </id>

        <field name="page" type="string" length="4" nullable="true" />
        <field name="dateOfEntry" column="date_of_entry" type="string" length="100" nullable="true" />
        <field name="text" type="string" length="8" nullable="true" />
        <field name="certainty" type="integer" nullable="false" />
    </entity>
</doctrine-mapping>