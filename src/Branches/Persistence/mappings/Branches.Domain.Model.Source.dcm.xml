<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="Branches\Domain\Model\Source" table="sources">
        <id name="id" type="bigint">
            <generator strategy="IDENTITY" />
        </id>

        <field name="title" type="string" length="255" nullable="true" />
        <field name="author" type="string" length="255" nullable="true" />
        <field name="publication" type="string" length="255" nullable="true" />
        <field name="agency" type="string" length="120" nullable="true" />
        <field name="abbr" type="string" length="60" nullable="true" />
        <field name="text" type="string" length="255" nullable="true" />

        <field name="rin" type="string" length="12" nullable="true" />

        <field name="created" type="datetimetz" nullable="false" />
        <field name="updated" type="datetimetz" nullable="true" />

        <many-to-many field="notes" target-entity="Note">
            <join-table name="source_notes">
                <join-columns>
                    <join-column name="note_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="source_id" referenced-column-name="id" unique="true" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>

