<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="Branches\Domain\Model\Location" table="locations">
        <id name="id" type="bigint">
            <generator strategy="IDENTITY" />
        </id>

        <field name="description" type="string" length="120" nullable="true" />
        <field name="address1" type="string" length="60" nullable="true" />
        <field name="address2" type="string" length="60" nullable="true" />
        <field name="address3" type="string" length="60" nullable="true" />
        <field name="city" type="string" length="60" nullable="true" />
        <field name="stateProvince" column="state_province" type="string" length="60" nullable="true" />
        <field name="postalCode" column="postal_code" type="string" length="10" nullable="true" />
        <field name="country" type="string" length="60" nullable="true" />
        <field name="phone" type="string" length="25" nullable="true" />
        <field name="latitude" type="float" nullable="true" />
        <field name="longitude" type="float" nullable="true" />
    </entity>
</doctrine-mapping>