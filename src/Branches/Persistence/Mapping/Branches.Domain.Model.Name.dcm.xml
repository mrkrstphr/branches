<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="Branches\Domain\Model\Name" table="person_names">
        <id name="id" type="bigint">
            <generator strategy="IDENTITY" />
        </id>

        <field name="givenName" column="given_name" type="string" length="120" nullable="true" />
        <field name="surname" type="string" length="120" nullable="true" />
        <field name="prefix" type="string" length="30" nullable="true" />
        <field name="suffix" type="string" length="30" nullable="true" />
        <field name="nickname" type="string" length="30" nullable="true" />
        <field name="certainty" type="integer" nullable="false" />

        <field name="created" type="datetimetz" nullable="false" />
        <field name="updated" type="datetimetz" nullable="true" />

        <many-to-one field="person" target-entity="Person" />

        <many-to-many field="sources" target-entity="Source">
            <join-table name="name_sources">
                <join-columns>
                    <join-column name="source_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="name_id" referenced-column-name="id" unique="true" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>